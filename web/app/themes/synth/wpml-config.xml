<wpml-config>
    <custom-fields>
        <custom-field action="copy">synth_vimeo_link</custom-field>
        <custom-field action="copy">hide_heading</custom-field>
        <custom-field action="copy">show_breadcrumb</custom-field>
        <custom-field action="translate">member_job</custom-field>
        <custom-field action="translate">member_excerpt</custom-field>
        <custom-field action="copy">member_facebook</custom-field>
        <custom-field action="copy">member_google</custom-field>
        <custom-field action="copy">member_twitter</custom-field>
        <custom-field action="copy">member_linkedin</custom-field>
        <custom-field action="copy">member_pinterest</custom-field>
        <custom-field action="copy">member_skype</custom-field>
        <custom-field action="copy">member_flickr</custom-field>
        <custom-field action="copy">synth_client_link</custom-field>
        <custom-field action="copy">synth_portfolio_link</custom-field>
        <custom-field action="translate">synth_portfolio_excerpt</custom-field>
        
    </custom-fields>
         
    <language-switcher-settings>
        <key name="icl_lang_sel_config">
            <key name="font-current-normal">#fff</key>
            <key name="font-current-hover">#fff</key>
            <key name="background-current-normal">#1c1c1f</key>
            <key name="background-current-hover">#1c1c1f</key>
            <key name="font-other-normal">#ddd</key>
            <key name="font-other-hover">#fff</key>
            <key name="background-other-normal">#1c1c1f</key>
            <key name="background-other-hover">#1c1c1f</key>
            <key name="border">#C8CFD7</key>
        </key>
        <key name="icl_lang_sel_footer_config">
            <key name="font-current-normal">#fff</key>
            <key name="font-current-hover">#fff</key>
            <key name="background-current-normal">#1c1c1f</key>
            <key name="background-current-hover">#1c1c1f</key>
            <key name="font-other-normal">#ddd</key>
            <key name="font-other-hover">#fff</key>
            <key name="background-other-normal">#1c1c1f</key>
            <key name="background-other-hover">#1c1c1f</key>
            <key name="border">#C8CFD7</key>
        </key>    
        <key name="icl_language_switcher_sidebar">0</key>  
        <key name="icl_widget_title_show">0</key>
        <key name="icl_lang_sel_type">dropdown</key>
        <key name="icl_lso_link_empty">0</key>
        <key name="icl_lso_flags">0</key>
        <key name="icl_lso_native_lang">1</key>
        <key name="icl_lso_display_lang">1</key>
        <key name="icl_lang_sel_footer">0</key>
        <key name="icl_post_availability">0</key>
        <key name="icl_post_availability_position">below</key>
        <key name="icl_post_availability_text">This post is also available in: %s</key>    
    </language-switcher-settings>    
</wpml-config>


